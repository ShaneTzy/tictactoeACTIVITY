@model TicTacToe.Models.GameState
@{
    ViewData["Title"] = "Tic-Tac-Toe Game";
}
<div class="game-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-md-12 col-sm-12">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white text-center">
                        <h2 class="mb-0">Tic-Tac-Toe</h2>
                    </div>
                    <div class="card-body text-center">
                        <div class="game-info mb-3">
                            <div class="alert alert-info">
                                <span id="game-status">Current Player: <strong id="current-player">@Model.Board.CurrentPlayer</strong></span>
                            </div>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="ai-mode">
                            <label class="form-check-label" for="ai-mode">
                                Play against AI
                            </label>
                        </div>
                        <div class="game-board">
                            @for (int i = 0; i < 9; i++)
                            {
                                <div class="game-cell" data-position="@i">
                                    <span>@Model.Board.Board[i]</span>
                                </div>
                            }
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6 col-sm-12 mb-2">
                                <button id="reset-game" class="btn btn-warning w-100">New Game</button>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <button id="reset-stats" class="btn btn-danger w-100">Reset Stats</button>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row text-center">
                            <div class="col-4">
                                <h5>Player X</h5>
                                <span id="player-x-wins" class="badge bg-success">@Model.PlayerXWins</span>
                            </div>
                            <div class="col-4">
                                <h5>Draws</h5>
                                <span id="draws" class="badge bg-secondary">@Model.Draws</span>
                            </div>
                            <div class="col-4">
                                <h5>Player O</h5>
                                <span id="player-o-wins" class="badge bg-info">@Model.PlayerOWins</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/game.js"></script>
}